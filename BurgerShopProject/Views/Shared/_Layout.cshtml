@inject UserManager<AppUser> UserManager
<!DOCTYPE html>
<html lang="en">


<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Burger Restaurant</title>
    <link rel="shortcut icon" href="~/images/burger.png" type="image/x-icon">
    <!-- google fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@100;300;400;500;600&amp;display=swap"
          rel="stylesheet" />
    <!-- aos plugin -->
    <link href="~/css/aos.css" rel="stylesheet">
    <!-- fontawesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/all.min.css" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
    <!-- start header -->
    <header>
        <div class="container">
            <div class="">

                <i id="menu-btn" class="fas fa-bars icons"></i>

                <a asp-controller="Home" asp-action="Index" class="logo"><img src="~/images/logo.png" alt="" /></a>

                <span class="space"></span>
                <nav class="">

                    <div class="d-flex justify-content-between">

                        <div>
                            <a href="/Home/Index">home</a>
                            <a href="/Home/Index/#menu">menu</a>
                            <a href="/Home/Index/#about">about</a>
                            <a href="/Home/Index/#reviews">reviews</a>
                            <a href="/Home/Index/#contact">contact</a>
                        </div>

                        <div>

                            <div class="d-flex">

                                <i id="search-btn" class="fas fa-search icons me-5 m"></i>
                                <a asp-controller="Orders" asp-action="Index"><i class="fas fa-shopping-cart icons" style="color:white"></i></a>
                                <span class="space"></span>

                                @if (SignInManager.IsSignedIn(User))
                                {
                                    <a class="" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">User</a>

                                    <form class="d-block" asp-area="Identity" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">

                                        <div class="d-flex">


                                            <button type="submit" class="btn text-white" style="font-size: 1.3rem; margin: 0; padding: 0;">Logout</button>

                                            @if (User.IsInRole("Admin"))
                                            {
                                                <a class="" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Yönetim</a>
                                            }
                                        </div>
                                    </form>
                                }
                                else
                                {
                                    <a class="" style="color:yellow; font-weight:bold; font-size:larger" asp-area="Identity" asp-page="/Account/Register">Register</a>
                                }
                                @if (!SignInManager.IsSignedIn(User))
                                {
                                    <a class="" style="color:yellow; font-weight:bold; font-size:larger" asp-area="Identity" asp-page="/Account/Login">Login</a>
                                }

                            </div>



                        </div>






                </nav>





            </div>
        </div>
