        <form class="" id="search-form">
            <input type="text"
                   name=""
                   placeholder="search here..."
                   id="search-box" />
            <label for="search-box" class="fas fa-search icons"></label>
        </form>
    </header>
    <section>
        @RenderBody()
    </section>
    <!-- start footer -->
    <footer class="mt-5 py-2">
        <div class="container">

            <p class="copyright">Made With GSBY | All Rights Reserved</p>
        </div>
    </footer>
    <script src="~/js/aos.js"></script>
    <script src="~/js/main.js"></script>
    @await RenderSectionAsync("Scripts", false)

